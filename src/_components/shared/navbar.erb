      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
        <li><a id="nav-home" class="py-4" href="<%= relative_url '/' %>">home</a></li>
        <li><a id="nav-projects" class="py-4" href="<%= relative_url '/projects' %>">projects</a></li>
        <li><a id="nav-posts" class="py-4" href="<%= relative_url '/posts' %>">tech stories</a></li>
