<header class="flex flex-col items-center justify-center mx-auto mt-4 mb-16">
  <div class="flex items-center space-x-4 lg:space-x-8">
    <div class="avatar">
      <div class="w-20 lg:w-28 mask mask-squircle">
        <img src="<%= relative_url '/images/avatar.webp' %>" />
      </div>
    </div>

    <div>
      <div>
        <h1 class="text-2xl md:text-3xl mb-2">A. Christian Toscano</h1>
        <p class="text-sm text-base-content">Software Engineer by day,</p>
        <p class="text-sm text-base-content mb-4">Entrepreneur by night</p>
      </div>
      <%# CONTACTS %>
      <div class="flex space-x-4">
        <% @metadata.contacts.each do |c| %>
          <a href="<%= c.url %>" data-tooltip="<%= c.name %>" class="link-hover">
            <img src="/images/contacts/<%= c.name.downcase %>.svg" style="width:25px;"/>
          </a>
        <% end %>
      </div>
    </div>
  </div>

</header>

<script>
  const currPath = window.location.pathname.split('/')[1] || 'home'
  document.querySelectorAll('nav > ul > li > a').forEach(e => e.classList.remove('current-page'))
  document.getElementById(`nav-${currPath}`).classList.add('current-page');
</script>
