<ul class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical lg:-ml-32">
  <% timeline.each.with_index do |t, index| %>
    <li class="m-0" style="margin:0;">
      <hr/>
      <div class="timeline-start text-lg"><%= t.period %></div>

      <div class="timeline-middle">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" /></svg>
      </div>

      <div class="timeline-end timeline-box max-w-sm border-slate-200">
        <div class="text-lg font-bold">
          <% if t.url.present? %>
            <a href="<%= t.url %>" class="flex link link-hover font-bold">
              <%= t.title %>
            </a>
          <% else %>
            <span><%= t.title %></span>
          <% end %>
        </div>
        <ul class="custom list-none" style="padding-left:4px;">
          <% t.description.each do |d| %>
            <li class="text-base text-balance my-1" data-icon="â†’ "><%= d %></li>
          <% end %>
        </ul>
      </div>
      <hr/>
    </li>
  <% end %>
</ul>
